# file managed by puppet
<VirtualHost<% ports.each do |port| -%> <%= port %><% end -%>>
  ServerName <%= name %>

<% aliases.each do |serveralias| -%>
  ServerAlias <%= serveralias %>
<% end -%>

  RewriteEngine On
  RewriteRule /(.*) https://%{HTTP_HOST}:<%= sslports[0].split(':').pop %>/$1 [R=302,NE]

  ServerSignature Off
</VirtualHost>
