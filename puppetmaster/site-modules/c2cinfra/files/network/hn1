# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo0
iface lo0 inet loopback

# default network interface, used only as VLAN parent interface
auto em0
iface em0 inet manual

# HP ilo
auto em1
iface em1 inet static
	address 192.168.10.10
	netmask 255.255.255.0

# internal network/vlan
auto vlan0
iface vlan0 inet static
	address 192.168.192.2
	netmask 255.255.255.0
	gateway 192.168.192.1
	pre-up /sbin/ifconfig em0 up && /sbin/ifconfig vlan0 create && /sbin/ifconfig vlan0 vlan 192 vlandev em0
