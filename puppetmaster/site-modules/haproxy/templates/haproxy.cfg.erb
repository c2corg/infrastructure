global
  log     127.0.0.1 local1
  maxconn 4096
  user haproxy
  group haproxy
  stats socket /var/run/haproxy.sock user haproxy group haproxy
  daemon

defaults
  log        global
  mode       http
  stats      enable
  option     httplog
  option     dontlognull
  option     redispatch
  retries    3
  maxconn    2000
  contimeout 5s
  clitimeout 50s
  srvtimeout 50s

listen c2corg <%= haproxy_vip_address %>:80
  stats   enable
  balance roundrobin
  #option  httpclose # prevent client-side keepalive
  timeout client 5000 # keep-alive on client-side
  option  http-server-close # but not on server-side
  option  forwardfor header X-Origin-IP # avoid messing around with X-Forwarded-For #678
  option  httpchk HEAD /probe.txt HTTP/1.1\r\nHost:\ www.camptocamp.org
  server  varnish <%= haproxy_varnish_address %>:80 check inter 5000 downinter 500    # active node
  server  apache  <%= haproxy_apache_address %>:80 check inter 5000 backup           # passive node
  capture request  header Host len 4
  capture response header Content-Type len 15
  capture response header X-Cache len 4

listen stats *:8008
  stats enable
  stats uri /stats
  balance

