global
  log     127.0.0.1 local1
  maxconn 4096
  user haproxy
  group haproxy
  stats socket /var/run/haproxy.sock user haproxy group haproxy
  daemon

defaults
  log        global
  mode       http
  stats      enable
  option     httplog
  option     dontlognull
  option     redispatch
  retries    3
  maxconn    2000
  contimeout 5s
  clitimeout 50s
  srvtimeout 50s

frontend c2corg
  bind    <%= haproxy_vip_address %>:80
  default_backend website
  #option  httpclose # prevent client-side keepalive
  timeout client 5000 # keep-alive on client-side
  option  forwardfor header X-Origin-IP # avoid messing around with X-Forwarded-For #678
  capture request  header Host len 4
  capture response header Content-Type len 15
  capture response header X-Cache len 4

backend website
  balance roundrobin
  server  cache    <%= haproxy_cache_address %>:80 check inter 5000 downinter 500    # active node
  server  main     <%= haproxy_main_address %>:80 check inter 5000 backup            # passive node
  server  failover <%= haproxy_failover_address %>:80 check inter 5000 backup        # active node
  option  httpchk HEAD /probe.txt HTTP/1.1\r\nHost:\ www.camptocamp.org
  option  http-server-close # no keep-alive on server-side

listen stats *:8008
  stats enable
  stats uri /stats
  balance

